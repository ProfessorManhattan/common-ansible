{
  "name": "@megabytelabs/shared-common-files",
  "version": "1.0.0",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "description": "Includes common files used across different types of common file repositories (e.g. Go, Python, etc.)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/megabyte-labs/common/shared.git"
  },
  "author": "Brian Zalewski <brian@megabyte.space> (https://megabyte.space)",
  "homepage": "https://megabyte.space",
  "bugs": {
    "email": "help@megabyte.space",
    "url": "https://gitlab.com/megabyte-labs/common/shared/-/issues"
  },
  "type": "module",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "fix": "task fix",
    "help": "task --list",
    "lint": "task lint",
    "start": "bash .start.sh"
  },
  "dependencies": {
    "esbuild": "^0.12.29",
    "esbuild-node-externals": "^1.3.0",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^13.1.0",
    "@megabytelabs/eslint-config": "^1.0.61",
    "@megabytelabs/prettier-config": "^14.14.14",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "cz-conventional-changelog": "^3.3.0"
  },
  "blueprint": {
    "description": "Includes common files used across different types of common file repositories (e.g. Go, Python, etc.)",
    "overview": "This repository feeds downstream repositories that store programming language specific common files. When this repository is updated, the changes are propagated downstream via CI. This repository contains files that are meant to be global. For instance, if Go projects and Angular projects share a common file (say `.editorconfig`, for example) then that file is stored in this repository and propagated to the Go and Angular common file repositories. Then, for example, the Go common file repository is included in all of the Go projects as a submodule. This is meant to be done with every repository in an eco-system so that meta files, documentation, etc. are all kept in sync.",
    "name": "Shared",
    "repository": {
      "github": "https://github.com/ProfessorManhattan/shared-common-files",
      "gitlab": "https://gitlab.com/megabyte-labs/common/shared"
    },
    "slug": "shared-common-files",
    "title": "Shared Common Files"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": "@megabytelabs/eslint-config"
  },
  "funding": [
    {
      "type": "opencollective",
      "url": "https://opencollective.com/megabytelabs"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/ProfessorManhattan"
    }
  ],
  "lint-staged": {
    "**/*": [
      "blocklint --wordlist blacklist,slave,whitelist",
      "check-merge-conflict",
      "check-added-large-files",
      "check-symlinks",
      "destroyed-symlinks"
    ],
    "**/*.(css|html|less|md|mjml|php|scss|sh|xml)": [
      "task fix:prettier --"
    ],
    "**/*.(jpg|png)": [
      "task image:compress --"
    ],
    "**/*.(js|jsx|ts)": [
      "task fix:js --",
      "task lint:js --"
    ],
    "**/*.json": [
      "task fix:json --"
    ],
    "**/*.py": [
      "black",
      "flake8"
    ],
    "**/*.sh": [
      "task fix:shell --",
      "task lint:shell --"
    ],
    "**/*.toml": [
      "task lint:toml --"
    ],
    "**/*.xml": [
      "task fix:xml --",
      "task lint:xml --"
    ],
    "**/*.yml": [
      "task fix:yaml --",
      "task lint:yaml --"
    ],
    "**/*vault.yml": [
      "task ansible:vault:lint:file --"
    ],
    "logo.png": [
      "task image:resize -- 200 200",
      "task image:compress --"
    ],
    "requirements.txt": [
      "requirements-txt-fixer"
    ]
  },
  "prettier": "@megabytelabs/prettier-config",
  "standard-version": {
    "scripts": {
      "prerelease": "git add --all"
    }
  }
}
