{
  "private": true,
  "name": "@mblabs/common-ansible",
  "version": "0.0.1",
  "description": "Shared Ansible files that propagate downstream as well as boilerplate code for new projects",
  "license": "MIT",
  "author": "Brian Zalewski <brian@megabyte.space> (https://megabyte.space)",
  "homepage": "https://megabyte.space",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ProfessorManhattan/common-ansible.git"
  },
  "bugs": {
    "email": "help@megabyte.space",
    "url": "https://gitlab.com/megabyte-labs/common/ansible/-/issues"
  },
  "type": "module",
  "scripts": {
    "fix": "task fix",
    "help": "task --list",
    "lint": "task lint",
    "prepare": "task common:husky",
    "repair": "bash <(curl -sS https://install.doctor/repair)",
    "start": "bash .config/start.sh"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "tslib": "^2.3.1"
  },
  "optionalDependencies": {
    "chalk": "^4.1.2",
    "inquirer": "^8.2.0",
    "signale": "^1.4.0",
    "string-break": "^1.2.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^13.1.0",
    "@mblabs/eslint-config": "^1.0.107",
    "@mblabs/prettier-config": "^14.14.30",
    "@mblabs/release-config": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "handlebars-helpers": "^0.10.0",
    "semantic-release": "^18.0.0"
  },
  "keywords": [
    "ansible",
    "awesome",
    "boilerplate",
    "mblabs",
    "megabytelabs",
    "npm",
    "package",
    "playbook",
    "professormanhattan",
    "role",
    "samples"
  ],
  "engines": {
    "node": ">=14.18.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "blueprint": {
    "description": "Shared Ansible files that propagate downstream as well as boilerplate code for new projects",
    "group": "common",
    "name": "Ansible Common",
    "overview": "This repository is home to common Ansible files as well as boilerplate code for new projects. This repository hosts files that are shared to all our downstream projects (perhaps yours as well). There is also boilerplate code that is added to a project if there is no file structure yet.",
    "profile": {
      "npmjs_organization": "mblabs"
    },
    "repository": {
      "github": "https://github.com/ProfessorManhattan/common-ansible",
      "gitlab": "https://gitlab.com/megabyte-labs/common/ansible"
    },
    "slug": "common-ansible",
    "subgroup": "ansible",
    "title": "Ansible Common Files and Boilerplate Code"
  },
  "eslintConfig": {
    "extends": "@mblabs/eslint-config",
    "overrides": [
      {
        "files": [
          "**/.boilerplate/**/*.yml"
        ],
        "rules": {
          "yml/no-empty-document": "off"
        }
      }
    ]
  },
  "funding": [
    {
      "type": "opencollective",
      "url": "https://opencollective.com/megabytelabs"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/ProfessorManhattan"
    }
  ],
  "lint-staged": {
    "**/*": [
      "blocklint --wordlist blacklist,slave,whitelist",
      "check-merge-conflict",
      "check-added-large-files",
      "check-symlinks",
      "destroyed-symlinks"
    ],
    "**/*.(css|html|less|md|mjml|php|scss|sh|xml)": [
      "task fix:prettier --"
    ],
    "**/*.(jpg|png)": [
      "task image:compress --"
    ],
    "**/*.(js|jsx|ts|tsx)": [
      "task fix:js --",
      "task lint:js --"
    ],
    "**/*.json": [
      "task fix:json --"
    ],
    "**/*.sh": [
      "task fix:shell --",
      "task lint:shell --"
    ],
    "**/*.toml": [
      "task lint:toml --"
    ],
    "**/*.xml": [
      "task fix:xml --",
      "task lint:xml --"
    ],
    "**/*.yml": [
      "task fix:yaml --",
      "task lint:yaml --"
    ],
    "logo.png": [
      "task image:resize -- 200 200",
      "task image:compress --"
    ]
  },
  "prettier": "@mblabs/prettier-config",
  "release": {
    "branches": [
      "master",
      "next"
    ],
    "extends": "@mblabs/release-config"
  }
}
