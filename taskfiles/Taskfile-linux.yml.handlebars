---
version: '3'

tasks:
  docker:
    cmds:
      - curl -sS https://install.doctor/docker | bash
    status:
      - type docker &> /dev/null

  git:
    cmds:
      - curl -sS https://install.doctor/git | bash
    status:
      - type git &> /dev/null

  jq:
    cmds:
      - curl -sS https://install.doctor/jq | bash
    status:
      - type jq &> /dev/null

  node:
    cmds:
      - curl -sS https://install.doctor/node | bash
    status:
      - type node &> /dev/null
      - type npm &> /dev/null
      - type npx &> /dev/null

  python:
    cmds:
      - curl -sS https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-x86.sh | bash -b -p "$MINICONDA_PATH"
    status:
      - type python &> /dev/null

  rsync:
    cmds:
      - curl -sS https://install.doctor/rsync | bash
    status:
      - type rsync &> /dev/null

  vagrant:
    cmds:
      - curl -sS https://install.doctor/vagrant | bash
    status:
      - type vagrant &> /dev/null

  virtualbox:
    cmds:
      - curl -sS https://install.doctor/virtualbox | bash
    status:
      - type virtualbox &> /dev/null

  yq:
    cmds:
      - curl -sS https://install.doctor/yq | bash
    status:
      - type yq &> /dev/null
