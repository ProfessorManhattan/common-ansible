{
  "name": "@{{profile.npmjs_organization}}/{{github_prefix}}{{slug}}",
  "version": "0.0.1",
  "description": "{{description}}",
  "license": "{{license}}",
  "author": "{{author.name}} <{{author.email}}> ({{link.home}})",
  "homepage": "{{link.home}}",
  "repository": {
    "type": "git",
    "url": "git+{{repo}}.git"
  },
  "bugs": {
    "email": "{{email.help}}",
    "url": "{{repo}}{{repository.location.issues}}"
  },
  "type": "module",
  "scripts": {
    "commit": "git-cz",
    "postinstall": "if [ -d .git ]; then husky install; fi && if [ -f .husky/pre-commit ]; then chmod 755 .husky/pre-commit; fi",
    "prepare-release": "task prepare-release",
    "version": "standard-version --no-verify"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@megabytelabs/prettier-config": "^1.0.0",
    "@megabytelabs/prettier-config-ansible": "^1.1.4",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^6.0.0",
    "inquirer": "^6.5.2",
    "prettier-plugin-sh": "^0.6.1",
    "signale": "^1.4.0"
  },
  "keywords": [
    "ansible",
    "archlinux",
    "centos",
    "debian",
    "doctor",
    "fedora",
    "install",
    "installdoctor",
    "macos",
    "megabytelabs",
    "molecule",
    "playbook",
    "professormanhattan",
    "ubuntu",
    "windows",
    "{{slug}}"
  ],
  "engines": {
    "node": ">=10"
  },
  "funding": [
    {
      "type": "opencollective",
      "url": "{{profile_link.opencollective}}/{{profile.opencollective}}"
    },
    {
      "type": "patreon",
      "url": "{{profile_link.patreon}}/{{profile.patreon}}"
    }
  ],
  "lint-staged": {
    "**/*": [
      "check-merge-conflict",
      "check-added-large-files",
      "check-symlinks"
    ],
    "**/*.(css|html|json|less|md|mjml|php|scss|sh|ts)": [
      "prettier --write"
    ],
    "**/*.js": [
      "npx standard --fix",
      "prettier --write"
    ],
    "**/*.(sh|sh.j2)": [
      "shellcheck"
    ],
    "**/*.xml": [
      "check-xml",
      "prettier --write"
    ],
    "**/*.yml": [
      "check-yaml",
      "yamllint -s",
      "prettier --write"
    ],
    "package.json": [
      "prettier-package-json --write"
    ],
    "requirements.txt": [
      "requirements-txt-fixer"
    ],
    "./**/*.py": [
      "black",
      "flake8"
    ]
  },
  "prettier": "@megabytelabs/prettier-config-ansible",
  "standard-version": {
    "scripts": {
      "prerelease": "git add --all"
    }
  }
}
